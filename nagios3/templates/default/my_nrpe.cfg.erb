# NRPE configurations#

command[check_cdn]=<%= @nagios_plugins %>/check_nfs_mount.sh -f /etc/fstab /shared

# Check memory
command[check_apache_mem]=<%= @nagios_plugins %>/check_proc_mem.sh -w 2048 -c 3072 --pidfile <%= @apache_pid_file %>
command[check_apache_fd]=<%= @nagios_plugins %>/check_proc_fd.sh -w 1024 -c 2048 --pidfile <%= @apache_pid_file %>
command[check_apache_cpu]=<%= @nagios_plugins %>/check_proc_cpu.sh -w 100 -c 200 --pidfile <%= @apache_pid_file %>
